<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>BottleMug App</title>
</head>
<style>
.flex-container {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
}
.productImage {
  width: 170px;
  height: 200px;
}
.product-box {
      background-color: white;
      border: 5px solid hotpink;
      border-radius: 12px;
      padding: 2px;
      text-align: center;
      width: 300px;
      height: 390px;
}
.click-button {
  background-color: honeydew; 
  border: 3px solid black;
  color: black;
  padding: 7px 16px;
  text-align: center;
  display: inline-block;
  font-size: 20px;
}
.text-center {
  background-image: url(/images/water1.jpg);
}
</style>
<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">BottleMug App</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="collapsibleNavbar">
          <ul class="navbar-nav me-auto">
            <li class="nav-item">
              <a class="nav-link" href="/add">Add new product</a>
            </li>
          </ul>
          <form class="d-flex" action="/search" method="GET">
            <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" name="query">
            <button class="btn btn-outline-success" type="submit">Search</button>
          </form>
        </div>
      </div>
    </nav>
  <div class="container">
    <br>
    <div class="text-center"><h2>Our Latest Items</h2></div>
    <br>

    <div class="flex-container">
      <% for(let i=0; i < products.length; i++) { %>
        <div class="flex-item">
          <div class="product-box">
            <img src="/images/<%= products[i].image %>" alt="<%= products[i].productName %>" class="productImage">
            <a href="/product/<%= products[i].productId %>">
              <h2><%= products[i].productName %></h2>
            </a>
            <p>$<%= products[i].price.toFixed(2) %></p>
            <a href="/edit/<%= products[i].productId %>" type="submit" class="click-button">Edit</a>
            <a href="/deleteProduct/<%= products[i].productId %>" type="submit" class="click-button" onclick="return confirm('Are you sure you want to delete this product?')">Delete</a>
          </div>
        </div>
      <% } %>
    </div>
  </div>
</body>
</html>
